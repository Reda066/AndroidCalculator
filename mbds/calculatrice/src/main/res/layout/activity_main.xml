<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="10dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        style="@style/black"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.25" />


    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        app:layout_constraintHeight_percent="0.2"
        android:layout_height="0dp"
        android:text="2"
        style="@style/black"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toTopOf="@+id/button1" />


    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        app:layout_constraintHeight_percent="0.2"
        android:layout_height="0dp"
        android:text="3"
        style="@style/black"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toTopOf="@+id/button2"
        app:layout_constraintVertical_bias="0.0" />


    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="0dp"
        app:layout_constraintHeight_percent="0.2"
        android:layout_height="0dp"
        android:text="+"
        style="@style/azure"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toTopOf="@+id/button3" />


    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        app:layout_constraintHeight_percent="0.2"
        android:layout_height="0dp"
        android:text="4"
        style="@style/black"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintStart_toStartOf="@+id/button1" />


    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        app:layout_constraintHeight_percent="0.2"
        android:layout_height="0dp"
        android:text="5"
        style="@style/black"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toTopOf="@+id/button4" />


    <Button
        android:id="@+id/button6"
        android:layout_width="0dp"
        app:layout_constraintHeight_percent="0.2"
        android:layout_height="0dp"
        android:text="6"
        style="@style/black"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toTopOf="@+id/button5" />



    <Button
        android:id="@+id/buttonMoins"
        android:layout_width="0dp"
        app:layout_constraintHeight_percent="0.2"
        android:layout_height="0dp"
        android:text="-"
        style="@style/azure"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toTopOf="@+id/button6" />


    <Button
        android:id="@+id/button7"
        android:layout_width="0dp"
        app:layout_constraintHeight_percent="0.2"
        android:layout_height="0dp"
        android:text="7"
        style="@style/black"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@+id/buttonEgal"
        app:layout_constraintStart_toStartOf="@+id/button4"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="0dp"
        app:layout_constraintHeight_percent="0.2"
        android:layout_height="0dp"
        android:text="8"
        style="@style/black"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toTopOf="@+id/button7" />


    <Button
        android:id="@+id/button9"
        android:layout_width="0dp"
        app:layout_constraintHeight_percent="0.2"
        android:layout_height="0dp"
        android:text="9"
        style="@style/black"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toTopOf="@+id/button8" />


    <Button
        android:id="@+id/buttonMultiple"
        android:layout_width="0dp"
        app:layout_constraintHeight_percent="0.2"
        android:layout_height="0dp"
        android:text="x"
        style="@style/azure"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintTop_toTopOf="@+id/button9" />




    <Button
        android:id="@+id/buttonEgal"
        android:layout_width="0dp"
        app:layout_constraintHeight_percent="0.2"
        android:layout_height="0dp"
        android:text="="
        style="@style/red"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/button7" />
    <Button
        android:id="@+id/button0"
        android:layout_width="0dp"
        app:layout_constraintHeight_percent="0.2"
        android:layout_height="0dp"
        android:text="0"
        style="@style/black"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintStart_toEndOf="@+id/buttonEgal"
        app:layout_constraintTop_toTopOf="@+id/buttonEgal" />

    <Button
        android:id="@+id/buttonDiviser"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.2"
        android:text="/"
        style="@style/azure"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintStart_toEndOf="@+id/button0"
        app:layout_constraintTop_toTopOf="@+id/button0" />

    <TextView
        android:id="@+id/Expression"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Expression"
        android:gravity="left"
        android:textColor="@color/white"
        android:textSize="35dp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Resultat"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="number"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:gravity="right"
        android:layout_marginBottom="1pt"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="@+id/Expression"
        app:layout_constraintEnd_toEndOf="@id/Expression"
        app:layout_constraintTop_toBottomOf="@+id/Expression"
        />

</androidx.constraintlayout.widget.ConstraintLayout>